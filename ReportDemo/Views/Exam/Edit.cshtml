@model ReportDemo.Models.ExamResult
@{
    ViewData["Title"] = "Edit Exam Result";
    Layout = "_DashboardLayout";
}

<style>
    .edit-header {
        background: linear-gradient(135deg, #ffc107 0%, #ff8c00 100%);
        color: white;
        padding: 2rem;
        border-radius: 15px;
        margin-bottom: 2rem;
        box-shadow: 0 10px 30px rgba(255, 193, 7, 0.3);
    }
    
    .form-card {
        background: white;
        border-radius: 15px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.08);
        padding: 2rem;
        margin-bottom: 2rem;
    }
    
    .form-group {
        margin-bottom: 1.5rem;
    }
    
    .form-label {
        font-weight: 600;
        color: #2c3e50;
        margin-bottom: 0.5rem;
        display: flex;
        align-items: center;
        gap: 8px;
    }
    
    .form-control, .form-select {
        border-radius: 10px;
        border: 2px solid #e9ecef;
        padding: 12px 15px;
        font-size: 1rem;
        transition: all 0.3s ease;
    }
    
    .form-control:focus, .form-select:focus {
        border-color: #ffc107;
        box-shadow: 0 0 0 0.2rem rgba(255, 193, 7, 0.25);
    }
    
    .grade-display {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 1rem;
        border-radius: 10px;
        text-align: center;
        font-size: 1.5rem;
        font-weight: bold;
        margin: 1rem 0;
        transition: all 0.3s ease;
    }
    
    .grade-display.passing {
        background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
    }
    
    .grade-display.failing {
        background: linear-gradient(135deg, #dc3545 0%, #e74c3c 100%);
    }
    
    .percentage-input {
        font-size: 1.2rem;
        font-weight: 600;
        text-align: center;
        color: #ffc107;
    }
    
    .student-info {
        background: #fff3cd;
        border-radius: 10px;
        padding: 1.5rem;
        margin-bottom: 2rem;
        border-left: 5px solid #ffc107;
    }
    
    .btn-submit {
        background: linear-gradient(135deg, #ffc107 0%, #ff8c00 100%);
        border: none;
        padding: 15px 30px;
        border-radius: 10px;
        color: white;
        font-weight: 600;
        font-size: 1.1rem;
        transition: all 0.3s ease;
        width: 100%;
    }
    
    .btn-submit:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(255, 193, 7, 0.3);
        color: white;
    }
    
    .validation-summary {
        background: #f8d7da;
        border: 1px solid #f5c6cb;
        color: #721c24;
        padding: 1rem;
        border-radius: 10px;
        margin-bottom: 1.5rem;
    }
    
    .form-text {
        color: #6c757d;
        font-size: 0.875rem;
        margin-top: 0.25rem;
    }
</style>

<div class="edit-header">
    <div class="row align-items-center">
        <div class="col-md-8">
            <h1><i class="fas fa-edit me-3"></i>Edit Exam Result</h1>
            <p class="mb-0">Update student examination scores and grades</p>
        </div>
        <div class="col-md-4 text-end">
            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-light me-2">
                <i class="fas fa-eye me-2"></i>View Details
            </a>
            <a asp-action="Index" class="btn btn-light">
                <i class="fas fa-list me-2"></i>All Results
            </a>
        </div>
    </div>
</div>

<!-- Validation Summary -->
@if (!ViewData.ModelState.IsValid)
{
    <div class="validation-summary">
        <h5><i class="fas fa-exclamation-triangle me-2"></i>Please correct the following errors:</h5>
        <ul class="mb-0">
            @foreach (var modelError in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <li>@modelError.ErrorMessage</li>
            }
        </ul>
    </div>
}

<form asp-action="Edit" method="post" id="editExamForm">
    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.CreatedAt)
    
    <div class="row">
        <!-- Current Information -->
        <div class="col-lg-6">
            <div class="form-card">
                <h4><i class="fas fa-info-circle me-2 text-info"></i>Current Information</h4>
                <hr>
                
                <div class="student-info">
                    <div class="row">
                        <div class="col-md-6">
                            <strong>Student:</strong> @Model.Student?.FullName
                        </div>
                        <div class="col-md-6">
                            <strong>Roll Number:</strong> @Model.Student?.RollNumber
                        </div>
                        <div class="col-md-6">
                            <strong>Class:</strong> @Model.Class?.ClassName - @Model.Class?.Section
                        </div>
                        <div class="col-md-6">
                            <strong>Academic Year:</strong> @Model.AcademicYear
                        </div>
                    </div>
                </div>
                
                <div class="form-group">
                    <label class="form-label">
                        <i class="fas fa-user"></i>
                        Student
                    </label>
                    <select asp-for="StudentId" class="form-select" required>
                        @if (ViewBag.Students != null)
                        {
                            @foreach (var student in ViewBag.Students)
                            {
                                <option value="@student.Id" selected="@(student.Id == Model.StudentId)">
                                    @student.FullName (@student.RollNumber)
                                </option>
                            }
                        }
                    </select>
                    <span asp-validation-for="StudentId" class="text-danger"></span>
                </div>
                
                <div class="form-group">
                    <label class="form-label">
                        <i class="fas fa-chalkboard"></i>
                        Class
                    </label>
                    <select asp-for="ClassId" class="form-select" required>
                        @if (ViewBag.Classes != null)
                        {
                            @foreach (var cls in ViewBag.Classes)
                            {
                                <option value="@cls.Id" selected="@(cls.Id == Model.ClassId)">
                                    Class @cls.ClassName - @cls.Section
                                </option>
                            }
                        }
                    </select>
                    <span asp-validation-for="ClassId" class="text-danger"></span>
                </div>
            </div>
        </div>
        
        <!-- Exam Details -->
        <div class="col-lg-6">
            <div class="form-card">
                <h4><i class="fas fa-clipboard-check me-2 text-success"></i>Exam Details</h4>
                <hr>
                
                <div class="form-group">
                    <label class="form-label">
                        <i class="fas fa-calendar"></i>
                        Academic Year
                    </label>
                    <input asp-for="AcademicYear" class="form-control" />
                    <span asp-validation-for="AcademicYear" class="text-danger"></span>
                </div>
                
                <div class="form-group">
                    <label class="form-label">
                        <i class="fas fa-clock"></i>
                        Term
                    </label>
                    <select asp-for="Term" class="form-select" required>
                        <option value="Mid-Term" selected="@(Model.Term == "Mid-Term")">Mid-Term</option>
                        <option value="Final" selected="@(Model.Term == "Final")">Final</option>
                        <option value="Quarterly" selected="@(Model.Term == "Quarterly")">Quarterly</option>
                    </select>
                    <span asp-validation-for="Term" class="text-danger"></span>
                </div>
                
                <div class="form-group">
                    <label class="form-label">
                        <i class="fas fa-calendar-day"></i>
                        Exam Date
                    </label>
                    <input asp-for="ExamDate" type="date" class="form-control" required />
                    <span asp-validation-for="ExamDate" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Score Input -->
    <div class="form-card">
        <h4><i class="fas fa-percentage me-2 text-warning"></i>Score & Grade Update</h4>
        <hr>
        
        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <label class="form-label">
                        <i class="fas fa-calculator"></i>
                        Percentage (%)
                    </label>
                    <input asp-for="Percentage" type="number" step="0.01" min="0" max="100" 
                           class="form-control percentage-input" id="percentageInput" 
                           value="@Model.Percentage" required />
                    <div class="form-text">Update the percentage score (0-100)</div>
                    <span asp-validation-for="Percentage" class="text-danger"></span>
                </div>
            </div>
            
            <div class="col-md-4">
                <label class="form-label">
                    <i class="fas fa-medal"></i>
                    Updated Grade
                </label>
                <div class="grade-display @(Model.IsPassed ? "passing" : "failing")" id="gradeDisplay">
                    <span id="gradeText">@Model.Grade</span>
                </div>
            </div>
            
            <div class="col-md-4">
                <label class="form-label">
                    <i class="fas fa-check-circle"></i>
                    Pass/Fail Status
                </label>
                <div class="grade-display @(Model.IsPassed ? "passing" : "failing")" id="statusDisplay">
                    <span id="statusText">@(Model.IsPassed ? "PASSED" : "FAILED")</span>
                </div>
            </div>
        </div>
        
        <div class="form-group">
            <label class="form-label">
                <i class="fas fa-comment"></i>
                Remarks (Optional)
            </label>
            <textarea asp-for="Remarks" class="form-control" rows="3" 
                      placeholder="Update any additional remarks or observations...">@Model.Remarks</textarea>
            <div class="form-text">Optional comments about the student's performance</div>
        </div>
    </div>
    
    <!-- Submit Button -->
    <div class="form-card">
        <div class="row">
            <div class="col-md-6">
                <button type="submit" class="btn btn-submit">
                    <i class="fas fa-save me-2"></i>Update Exam Result
                </button>
            </div>
            <div class="col-md-6">
                <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary w-100" style="padding: 15px;">
                    <i class="fas fa-times me-2"></i>Cancel
                </a>
            </div>
        </div>
    </div>
    
    <!-- Hidden Fields -->
    <input asp-for="ExamCompleted" type="hidden" value="true" />
    <input asp-for="Grade" type="hidden" id="hiddenGrade" value="@Model.Grade" />
    <input asp-for="IsPassed" type="hidden" id="hiddenIsPassed" value="@Model.IsPassed" />
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        $(document).ready(function() {
            // Initial grade calculation
            updateGradeAndStatus(@Model.Percentage);
            
            // Percentage input handler
            $('#percentageInput').on('input', function() {
                const percentage = parseFloat($(this).val()) || 0;
                updateGradeAndStatus(percentage);
            });
            
            function updateGradeAndStatus(percentage) {
                let grade = 'F';
                let passed = false;
                let gradeClass = 'failing';
                
                if (percentage >= 90) {
                    grade = 'A+';
                    passed = true;
                    gradeClass = 'passing';
                } else if (percentage >= 80) {
                    grade = 'A';
                    passed = true;
                    gradeClass = 'passing';
                } else if (percentage >= 70) {
                    grade = 'B';
                    passed = true;
                    gradeClass = 'passing';
                } else if (percentage >= 60) {
                    grade = 'C';
                    passed = true;
                    gradeClass = 'passing';
                } else if (percentage >= 40) {
                    grade = 'D';
                    passed = true;
                    gradeClass = 'passing';
                }
                
                $('#gradeText').text(grade);
                $('#gradeDisplay').removeClass('passing failing').addClass(gradeClass);
                $('#hiddenGrade').val(grade);
                
                $('#statusText').text(passed ? 'PASSED' : 'FAILED');
                $('#statusDisplay').removeClass('passing failing').addClass(gradeClass);
                $('#hiddenIsPassed').val(passed);
            }
            
            // Form submission
            $('#editExamForm').submit(function(e) {
                const percentage = parseFloat($('#percentageInput').val());
                if (percentage < 0 || percentage > 100) {
                    e.preventDefault();
                    alert('Please enter a percentage between 0 and 100.');
                    return false;
                }
                
                // Show loading state
                $('button[type="submit"]').html('<i class="fas fa-spinner fa-spin me-2"></i>Updating...').prop('disabled', true);
            });
        });
    </script>
}