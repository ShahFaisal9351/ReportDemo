@model OfflineAuthDemo.Models.RegisterViewModel
@{
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
    ViewData["Title"] = "Create account";
}

<form asp-action="Register" method="post">
    <div asp-validation-summary="All" class="text-warning small mb-3"></div>

    <div class="mb-3">
        <label asp-for="Email" class="form-label">Email</label>
        <input asp-for="Email" class="form-control auth-input" autocomplete="email" />
        <span asp-validation-for="Email" class="text-warning small"></span>
    </div>

    <div class="mb-3">
        <div class="d-flex justify-content-between align-items-center">
            <label asp-for="Password" class="form-label mb-0">Password</label>
            <small id="pwStrength" class="text-white-50">Strength: –</small>
        </div>
        <div class="input-group">
            <input asp-for="Password" class="form-control auth-input" id="pw" autocomplete="new-password" />
            <button class="btn btn-outline-light" type="button" id="togglePw">Show</button>
        </div>
        <span asp-validation-for="Password" class="text-warning small"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ConfirmPassword" class="form-label">Confirm password</label>
        <div class="input-group">
            <input asp-for="ConfirmPassword" class="form-control auth-input" id="cpw" autocomplete="new-password" />
            <button class="btn btn-outline-light" type="button" id="toggleCpw">Show</button>
        </div>
        <span asp-validation-for="ConfirmPassword" class="text-warning small"></span>
    </div>

    <div class="form-check mb-3">
        <input class="form-check-input" type="checkbox" id="terms" required />
        <label class="form-check-label" for="terms">I agree to the Terms and Privacy Policy</label>
    </div>

    <div class="d-grid">
        <button type="submit" class="btn btn-lg auth-btn">Create account</button>
    </div>
    <div class="mt-3 text-center">
        <span class="text-white-50">Already have an account?</span>
        <a asp-controller="Account" asp-action="Login" class="link-light text-decoration-none">Sign in</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        (function () {
            const pw = document.getElementById('pw');
            const cpw = document.getElementById('cpw');
            const togglePw = document.getElementById('togglePw');
            const toggleCpw = document.getElementById('toggleCpw');
            const meter = document.getElementById('pwStrength');

            function updateStrength(value) {
                let score = 0;
                if (!value) return '–';
                if (value.length >= 8) score++;
                if (/[A-Z]/.test(value)) score++;
                if (/[a-z]/.test(value)) score++;
                if (/\d/.test(value)) score++;
                if (/[^A-Za-z0-9]/.test(value)) score++;
                return ['Very weak','Weak','Okay','Good','Strong'][Math.min(score-1, 4)] || 'Very weak';
            }

            pw && pw.addEventListener('input', function () {
                meter.textContent = 'Strength: ' + updateStrength(pw.value);
            });

            function bindToggle(input, btn) {
                if (!input || !btn) return;
                btn.addEventListener('click', function () {
                    const next = input.type === 'password' ? 'text' : 'password';
                    input.type = next;
                    btn.textContent = next === 'password' ? 'Show' : 'Hide';
                });
            }
            bindToggle(pw, togglePw);
            bindToggle(cpw, toggleCpw);
        })();
    </script>
}
