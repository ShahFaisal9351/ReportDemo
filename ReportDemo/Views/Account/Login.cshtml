@model ReportDemo.Models.LoginViewModel
@{
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
    ViewData["Title"] = "Login";
}

<form asp-action="Login" method="post">
    <div asp-validation-summary="All" class="text-warning small mb-3"></div>

    <div class="mb-3">
        <label asp-for="Email" class="form-label">Email</label>
        <input asp-for="Email" class="form-control auth-input" autocomplete="username" />
        <span asp-validation-for="Email" class="text-warning small"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Password" class="form-label">Password</label>
        <input asp-for="Password" class="form-control auth-input" autocomplete="current-password" />
        <span asp-validation-for="Password" class="text-warning small"></span>
    </div>

    <div class="form-check mb-3">
        <input asp-for="RememberMe" class="form-check-input" />
        <label asp-for="RememberMe" class="form-check-label"></label>
    </div>

    <div class="d-grid">
        <button type="submit" class="btn btn-lg auth-btn">Sign in</button>
    </div>
    <div class="mt-3 text-center">
        <a asp-controller="Account" asp-action="Register" class="link-light text-decoration-none">Create an account</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
