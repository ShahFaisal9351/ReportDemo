@model IEnumerable<ReportDemo.Models.Student>

@{
    ViewData["Title"] = "Class Students";
    var classInfo = ViewBag.Class as ReportDemo.Models.Class;
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-info text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h3 class="card-title mb-0">
                            <i class="fas fa-users"></i>
                            Students in @classInfo?.DisplayName
                        </h3>
                        <div>
                            <a asp-controller="Students" asp-action="Create" class="btn btn-light btn-sm me-2">
                                <i class="fas fa-user-plus"></i> Add Student to This Class
                            </a>
                            <a asp-action="Details" asp-route-id="@classInfo?.Id" class="btn btn-outline-light btn-sm">
                                <i class="fas fa-info-circle"></i> Class Details
                            </a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <!-- Class Information Summary -->
                    @if (classInfo != null)
                    {
                        <div class="alert alert-info">
                            <div class="row">
                                <div class="col-md-3">
                                    <strong><i class="fas fa-chalkboard-teacher"></i> Class:</strong> @classInfo.ClassName
                                </div>
                                <div class="col-md-2">
                                    <strong><i class="fas fa-layer-group"></i> Section:</strong> @classInfo.Section
                                </div>
                                <div class="col-md-3">
                                    <strong><i class="fas fa-user-tie"></i> Teacher:</strong> 
                                    @(string.IsNullOrEmpty(classInfo.TeacherInCharge) ? "Not assigned" : classInfo.TeacherInCharge)
                                </div>
                                <div class="col-md-2">
                                    <strong><i class="fas fa-door-open"></i> Room:</strong> 
                                    @(string.IsNullOrEmpty(classInfo.RoomNumber) ? "Not set" : classInfo.RoomNumber)
                                </div>
                                <div class="col-md-2">
                                    <strong><i class="fas fa-users"></i> Students:</strong> @Model.Count()
                                </div>
                            </div>
                        </div>
                    }

                    @if (Model.Any())
                    {
                        <!-- Students Table -->
                        <div class="table-responsive">
                            <table class="table table-hover table-striped">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Roll Number</th>
                                        <th>Student Name</th>
                                        <th>Gender</th>
                                        <th>Age</th>
                                        <th>Contact Info</th>
                                        <th>Guardian</th>
                                        <th>Enrollment Date</th>
                                        <th class="text-center">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var student in Model.OrderBy(s => s.RollNumber))
                                    {
                                        <tr>
                                            <td>
                                                <span class="badge bg-primary">@student.RollNumber</span>
                                            </td>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="student-avatar me-2 bg-secondary text-white rounded-circle d-flex align-items-center justify-content-center" 
                                                         style="width: 35px; height: 35px; font-size: 14px; font-weight: bold;">
                                                        @((!string.IsNullOrEmpty(student.FirstName) && student.FirstName.Length > 0) ? student.FirstName.Substring(0, 1).ToUpper() : "N")
                                                    </div>
                                                    <div>
                                                        <strong>@student.FullName</strong>
                                                        <br>
                                                        <small class="text-muted">@student.Email</small>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                <span class="badge @(student.Gender == "Male" ? "bg-primary" : student.Gender == "Female" ? "bg-pink" : "bg-secondary")">
                                                    @student.Gender
                                                </span>
                                            </td>
                                            <td>
                                                <span class="badge @(student.Age >= 18 ? "bg-success" : "bg-warning text-dark")">
                                                    @student.Age years
                                                </span>
                                            </td>
                                            <td>
                                                <div>
                                                    <small class="d-block">
                                                        <i class="fas fa-phone text-muted"></i> @student.PhoneNumber
                                                    </small>
                                                    <small class="text-muted">
                                                        <i class="fas fa-map-marker-alt"></i> @student.City, @student.Country
                                                    </small>
                                                </div>
                                            </td>
                                            <td>
                                                <div>
                                                    <strong class="d-block">@student.GuardianName</strong>
                                                    <small class="text-muted">
                                                        <i class="fas fa-phone"></i> @student.GuardianContact
                                                    </small>
                                                </div>
                                            </td>
                                            <td>
                                                <small>@student.EnrollmentDate.ToString("MMM dd, yyyy")</small>
                                            </td>
                                            <td class="text-center">
                                                <div class="btn-group" role="group">
                                                    <a asp-controller="Students" asp-action="Details" asp-route-id="@student.Id" 
                                                       class="btn btn-sm btn-outline-info" title="View Details">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a asp-controller="Students" asp-action="Edit" asp-route-id="@student.Id" 
                                                       class="btn btn-sm btn-outline-warning" title="Edit">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <a asp-controller="Students" asp-action="Delete" asp-route-id="@student.Id" 
                                                       class="btn btn-sm btn-outline-danger" title="Delete">
                                                        <i class="fas fa-trash"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <!-- Statistics Summary -->
                        <div class="row mt-4">
                            <div class="col-md-3">
                                <div class="card bg-primary text-white">
                                    <div class="card-body text-center">
                                        <h4>@Model.Count()</h4>
                                        <small>Total Students</small>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="card bg-info text-white">
                                    <div class="card-body text-center">
                                        <h4>@Model.Count(s => s.Gender == "Male")</h4>
                                        <small>Male Students</small>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="card bg-pink text-white">
                                    <div class="card-body text-center">
                                        <h4>@Model.Count(s => s.Gender == "Female")</h4>
                                        <small>Female Students</small>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="card bg-success text-white">
                                    <div class="card-body text-center">
                                        <h4>@(Model.Any() ? Math.Round(Model.Average(s => s.Age), 1) : 0)</h4>
                                        <small>Average Age</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <!-- Empty State -->
                        <div class="text-center py-5">
                            <div class="mb-4">
                                <i class="fas fa-user-graduate fa-5x text-muted"></i>
                            </div>
                            <h4 class="text-muted">No Students in This Class</h4>
                            <p class="text-muted">
                                This class doesn't have any students enrolled yet. Start by adding students to this class.
                            </p>
                            <a asp-controller="Students" asp-action="Create" class="btn btn-primary">
                                <i class="fas fa-user-plus"></i> Add First Student
                            </a>
                        </div>
                    }

                    <!-- Action Buttons -->
                    <div class="mt-4 text-center">
                        <a asp-action="Index" class="btn btn-secondary me-2">
                            <i class="fas fa-arrow-left"></i> Back to Classes
                        </a>
                        @if (classInfo != null)
                        {
                            <a asp-action="Details" asp-route-id="@classInfo.Id" class="btn btn-outline-info me-2">
                                <i class="fas fa-info-circle"></i> Class Details
                            </a>
                            <a asp-action="Edit" asp-route-id="@classInfo.Id" class="btn btn-outline-warning">
                                <i class="fas fa-edit"></i> Edit Class
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .bg-pink {
        background-color: #e91e63 !important;
    }
    
    .card {
        transition: transform 0.2s;
    }
    
    .card:hover {
        transform: translateY(-2px);
    }
</style>