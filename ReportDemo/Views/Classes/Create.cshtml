@model ReportDemo.Models.Class

@{
    ViewData["Title"] = "Create Class";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-success text-white">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-plus-circle"></i>
                        Create New Class
                    </h3>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="ClassName" class="form-label">
                                        <i class="fas fa-chalkboard-teacher text-muted"></i>
                                        @Html.DisplayNameFor(model => model.ClassName)
                                        <span class="text-danger">*</span>
                                    </label>
                                    <select asp-for="ClassName" class="form-select">
                                        <option value="">Select Class...</option>
                                        <option value="Nursery">Nursery</option>
                                        <option value="KG">KG (Kindergarten)</option>
                                        <option value="1">Class 1</option>
                                        <option value="2">Class 2</option>
                                        <option value="3">Class 3</option>
                                        <option value="4">Class 4</option>
                                        <option value="5">Class 5</option>
                                        <option value="6">Class 6</option>
                                        <option value="7">Class 7</option>
                                        <option value="8">Class 8</option>
                                        <option value="9">Class 9</option>
                                        <option value="10">Class 10 (Matric)</option>
                                    </select>
                                    <span asp-validation-for="ClassName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Section" class="form-label">
                                        <i class="fas fa-layer-group text-muted"></i>
                                        @Html.DisplayNameFor(model => model.Section)
                                        <span class="text-danger">*</span>
                                    </label>
                                    <select asp-for="Section" class="form-select">
                                        <option value="">Select Section...</option>
                                        <option value="A">Section A</option>
                                        <option value="B">Section B</option>
                                        <option value="C">Section C</option>
                                        <option value="D">Section D</option>
                                        <option value="E">Section E</option>
                                    </select>
                                    <span asp-validation-for="Section" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="TeacherInCharge" class="form-label">
                                        <i class="fas fa-user-tie text-muted"></i>
                                        @Html.DisplayNameFor(model => model.TeacherInCharge)
                                    </label>
                                    <input asp-for="TeacherInCharge" class="form-control" placeholder="Enter teacher name..." />
                                    <span asp-validation-for="TeacherInCharge" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="RoomNumber" class="form-label">
                                        <i class="fas fa-door-open text-muted"></i>
                                        @Html.DisplayNameFor(model => model.RoomNumber)
                                    </label>
                                    <input asp-for="RoomNumber" class="form-control" placeholder="e.g., Room 101, Lab A..." />
                                    <span asp-validation-for="RoomNumber" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group mb-4">
                            <div class="alert alert-info">
                                <i class="fas fa-info-circle"></i>
                                <strong>Note:</strong> The combination of Class Name and Section must be unique. 
                                For example, if "Class 5 - A" already exists, you cannot create another class with the same combination.
                            </div>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-outline-secondary me-md-2">
                                <i class="fas fa-arrow-left"></i>
                                Back to Classes
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-save"></i>
                                Create Class
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Preview Card -->
            <div class="card shadow mt-4" id="previewCard" style="display: none;">
                <div class="card-header bg-info text-white">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-eye"></i>
                        Class Preview
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <strong>Full Class Name:</strong>
                            <span id="previewClassName" class="text-primary"></span>
                        </div>
                        <div class="col-md-6">
                            <strong>Display Format:</strong>
                            <span id="previewDisplay" class="text-success"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        $(document).ready(function() {
            // Preview functionality
            function updatePreview() {
                var className = $('#ClassName').val();
                var section = $('#Section').val();
                
                if (className && section) {
                    var fullName = className === 'KG' ? 'Kindergarten' : 
                                  className === 'Nursery' ? 'Nursery' : 
                                  className === '10' ? 'Class 10 (Matric)' : 
                                  'Class ' + className;
                    
                    $('#previewClassName').text(fullName + ' - Section ' + section);
                    $('#previewDisplay').text(className + ' - ' + section);
                    $('#previewCard').fadeIn();
                } else {
                    $('#previewCard').fadeOut();
                }
            }
            
            $('#ClassName, #Section').on('change', updatePreview);
            
            // Form validation enhancement
            $('form').on('submit', function(e) {
                var isValid = true;
                
                if (!$('#ClassName').val()) {
                    isValid = false;
                    $('#ClassName').addClass('is-invalid');
                } else {
                    $('#ClassName').removeClass('is-invalid');
                }
                
                if (!$('#Section').val()) {
                    isValid = false;
                    $('#Section').addClass('is-invalid');
                } else {
                    $('#Section').removeClass('is-invalid');
                }
                
                if (!isValid) {
                    e.preventDefault();
                    $('html, body').animate({
                        scrollTop: $('.is-invalid').first().offset().top - 100
                    }, 500);
                }
            });
        });
    </script>
}