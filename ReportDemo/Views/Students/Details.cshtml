@model ReportDemo.Models.Student

@{
    ViewData["Title"] = "Student Details";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<style>
    .details-container {
        background: #fff;
        border-radius: 12px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.08);
        overflow: hidden;
    }
    
    .details-header {
        background: linear-gradient(135deg, #9b59b6 0%, #8e44ad 100%);
        color: white;
        padding: 30px;
        position: relative;
    }
    
    .details-header::before {
        content: '';
        position: absolute;
        top: -50%;
        right: -50%;
        width: 200%;
        height: 200%;
        background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 70%);
        animation: rotate 25s linear infinite;
    }
    
    @@keyframes rotate {
        from { transform: rotate(0deg); }
        to { transform: rotate(360deg); }
    }
    
    .details-header-content {
        position: relative;
        z-index: 2;
        text-align: center;
    }
    
    .student-avatar-large {
        width: 80px;
        height: 80px;
        border-radius: 50%;
        background: rgba(255,255,255,0.2);
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 15px;
        font-size: 2rem;
        font-weight: 600;
        border: 3px solid rgba(255,255,255,0.3);
    }
    
    .student-title {
        font-size: 1.8rem;
        font-weight: 700;
        margin-bottom: 8px;
    }
    
    .student-subtitle {
        opacity: 0.9;
        font-size: 1.1rem;
    }
    
    .student-id-large {
        background: rgba(255,255,255,0.2);
        padding: 8px 20px;
        border-radius: 25px;
        font-size: 0.9rem;
        margin-top: 15px;
        display: inline-block;
    }
    
    .details-body {
        padding: 40px;
    }
    
    .info-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 25px;
        margin-bottom: 30px;
    }
    
    .info-card {
        background: #f8f9fa;
        border-radius: 12px;
        padding: 25px;
        border-left: 4px solid #9b59b6;
        transition: all 0.3s ease;
    }
    
    .info-card:hover {
        transform: translateY(-3px);
        box-shadow: 0 8px 25px rgba(0,0,0,0.1);
    }
    
    .info-label {
        font-size: 0.85rem;
        color: #7f8c8d;
        text-transform: uppercase;
        letter-spacing: 1px;
        font-weight: 600;
        margin-bottom: 8px;
        display: flex;
        align-items: center;
        gap: 8px;
    }
    
    .info-value {
        font-size: 1.3rem;
        font-weight: 600;
        color: #2c3e50;
    }
    
    .actions-section {
        border-top: 1px solid #e9ecef;
        padding-top: 25px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        gap: 15px;
    }
    
    .action-group {
        display: flex;
        gap: 15px;
    }
    
    .professional-btn {
        padding: 12px 25px;
        border: none;
        border-radius: 8px;
        font-weight: 500;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        transition: all 0.3s ease;
        font-size: 0.95rem;
        cursor: pointer;
    }
    
    .btn-edit {
        background: linear-gradient(135deg, #f39c12 0%, #e67e22 100%);
        color: white;
    }
    
    .btn-edit:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(243, 156, 18, 0.4);
        color: white;
    }
    
    .btn-delete {
        background: linear-gradient(135deg, #e74c3c 0%, #c0392b 100%);
        color: white;
    }
    
    .btn-delete:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(231, 76, 60, 0.4);
        color: white;
    }
    
    .btn-back {
        background: linear-gradient(135deg, #95a5a6 0%, #7f8c8d 100%);
        color: white;
    }
    
    .btn-back:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(149, 165, 166, 0.4);
        color: white;
    }
    
    .age-category {
        padding: 6px 15px;
        border-radius: 20px;
        font-size: 0.85rem;
        font-weight: 500;
        margin-left: 10px;
    }
    
    .age-adult {
        background: linear-gradient(135deg, #27ae60 0%, #2ecc71 100%);
        color: white;
    }
    
    .age-minor {
        background: linear-gradient(135deg, #f39c12 0%, #e67e22 100%);
        color: white;
    }
    
    @@media (max-width: 768px) {
        .actions-section {
            flex-direction: column;
            align-items: stretch;
        }
        
        .action-group {
            justify-content: center;
        }
    }
</style>

<div class="details-container">
    <div class="details-header">
        <div class="details-header-content">
            <div class="student-avatar-large">
                @(Model.Name?.Substring(0, 1).ToUpper() ?? "N")
            </div>
            <h1 class="student-title">@Model.Name</h1>
            <p class="student-subtitle">Student Profile Details</p>
            <div class="student-id-large">
                <i class="fas fa-id-badge"></i>
                Student ID: #@Model.Id.ToString("D4")
            </div>
        </div>
    </div>
    
    <div class="details-body">
        <div class="info-grid">
            <div class="info-card">
                <div class="info-label">
                    <i class="fas fa-user"></i>
                    Full Name
                </div>
                <div class="info-value">@Model.Name</div>
            </div>
            
            <div class="info-card">
                <div class="info-label">
                    <i class="fas fa-calendar-alt"></i>
                    Age
                </div>
                <div class="info-value">
                    @Model.Age years old
                    <span class="age-category @(Model.Age >= 18 ? "age-adult" : "age-minor")">
                        @(Model.Age >= 18 ? "Adult" : "Minor")
                    </span>
                </div>
            </div>
            
            <div class="info-card">
                <div class="info-label">
                    <i class="fas fa-hash"></i>
                    Record ID
                </div>
                <div class="info-value">#@Model.Id.ToString("D4")</div>
            </div>
            
            <div class="info-card">
                <div class="info-label">
                    <i class="fas fa-info-circle"></i>
                    Status
                </div>
                <div class="info-value" style="color: #27ae60;">Active Student</div>
            </div>
        </div>
        
        <div class="actions-section">
            <div>
                <a asp-action="Index" class="professional-btn btn-back">
                    <i class="fas fa-arrow-left"></i>
                    Back to Students
                </a>
            </div>
            
            <div class="action-group">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="professional-btn btn-edit">
                    <i class="fas fa-edit"></i>
                    Edit Student
                </a>
                
                <a asp-action="Delete" asp-route-id="@Model.Id" class="professional-btn btn-delete">
                    <i class="fas fa-trash"></i>
                    Delete Student
                </a>
            </div>
        </div>
    </div>
</div>
