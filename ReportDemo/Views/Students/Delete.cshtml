@model ReportDemo.Models.Student

@{
    ViewData["Title"] = "Delete Student";
}

<h2>Delete Student</h2>

<div class="alert alert-danger">
    <strong>⚠ Are you sure you want to delete this student?</strong>
</div>

<div class="card shadow p-3 mb-3">
    <dl class="row">
        <dt class="col-sm-2">Id</dt>
        <dd class="col-sm-10">@Model.Id</dd>

        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Age</dt>
        <dd class="col-sm-10">@Model.Age</dd>
    </dl>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">🗑️ Confirm Delete</button>
    <a asp-action="Index" class="btn btn-secondary">⬅ Cancel</a>
</form>
