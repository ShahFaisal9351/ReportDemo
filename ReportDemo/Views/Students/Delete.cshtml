@model ReportDemo.Models.Student

@{
    ViewData["Title"] = "Delete Student";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<style>
    .delete-container {
        background: #fff;
        border-radius: 12px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.08);
        overflow: hidden;
    }
    
    .delete-header {
        background: linear-gradient(135deg, #e74c3c 0%, #c0392b 100%);
        color: white;
        padding: 25px 30px;
        position: relative;
    }
    
    .delete-header::before {
        content: '';
        position: absolute;
        top: -50%;
        right: -50%;
        width: 200%;
        height: 200%;
        background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 70%);
        animation: rotate 30s linear infinite;
    }
    
    @@keyframes rotate {
        from { transform: rotate(0deg); }
        to { transform: rotate(360deg); }
    }
    
    .delete-header-content {
        position: relative;
        z-index: 2;
    }
    
    .delete-header h4 {
        margin: 0;
        font-size: 1.5rem;
        font-weight: 600;
        display: flex;
        align-items: center;
        gap: 12px;
    }
    
    .delete-header p {
        margin: 8px 0 0 0;
        opacity: 0.9;
        font-size: 0.95rem;
    }
    
    .warning-section {
        background: #fff3cd;
        border: 2px solid #ffeaa7;
        border-radius: 12px;
        padding: 25px;
        margin: 30px;
        text-align: center;
    }
    
    .warning-icon {
        font-size: 3rem;
        color: #e17055;
        margin-bottom: 15px;
    }
    
    .warning-title {
        font-size: 1.3rem;
        font-weight: 600;
        color: #d63031;
        margin-bottom: 10px;
    }
    
    .warning-text {
        color: #6c5ce7;
        font-size: 1rem;
        margin-bottom: 15px;
    }
    
    .warning-note {
        background: #ffebee;
        border-left: 4px solid #e74c3c;
        padding: 15px;
        border-radius: 0 8px 8px 0;
        font-size: 0.9rem;
        color: #2c3e50;
    }
    
    .student-preview {
        background: #f8f9fa;
        border-radius: 12px;
        padding: 30px;
        margin: 0 30px 30px;
    }
    
    .preview-title {
        font-size: 1.1rem;
        font-weight: 600;
        color: #2c3e50;
        margin-bottom: 20px;
        text-align: center;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
    }
    
    .student-card {
        background: white;
        border-radius: 8px;
        padding: 20px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        text-align: center;
    }
    
    .student-avatar-preview {
        width: 60px;
        height: 60px;
        border-radius: 50%;
        background: linear-gradient(135deg, #e74c3c 0%, #c0392b 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 15px;
        font-size: 1.5rem;
        font-weight: 600;
        color: white;
    }
    
    .student-name-preview {
        font-size: 1.2rem;
        font-weight: 600;
        color: #2c3e50;
        margin-bottom: 5px;
    }
    
    .student-details-preview {
        color: #7f8c8d;
        font-size: 0.9rem;
    }
    
    .student-id-preview {
        background: #ecf0f1;
        padding: 5px 12px;
        border-radius: 15px;
        font-size: 0.8rem;
        font-weight: 600;
        color: #2c3e50;
        margin-top: 10px;
        display: inline-block;
    }
    
    .actions-section {
        padding: 30px;
        border-top: 1px solid #e9ecef;
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        gap: 15px;
    }
    
    .professional-btn {
        padding: 12px 25px;
        border: none;
        border-radius: 8px;
        font-weight: 500;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        transition: all 0.3s ease;
        font-size: 0.95rem;
        cursor: pointer;
    }
    
    .btn-delete-confirm {
        background: linear-gradient(135deg, #e74c3c 0%, #c0392b 100%);
        color: white;
    }
    
    .btn-delete-confirm:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(231, 76, 60, 0.4);
        color: white;
    }
    
    .btn-cancel {
        background: linear-gradient(135deg, #95a5a6 0%, #7f8c8d 100%);
        color: white;
    }
    
    .btn-cancel:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(149, 165, 166, 0.4);
        color: white;
    }
    
    @@media (max-width: 768px) {
        .actions-section {
            flex-direction: column;
            align-items: stretch;
        }
        
        .professional-btn {
            justify-content: center;
        }
    }
</style>

<div class="delete-container">
    <div class="delete-header">
        <div class="delete-header-content">
            <h4>
                <i class="fas fa-exclamation-triangle"></i>
                Delete Student Record
            </h4>
            <p>Permanently remove student from the system</p>
        </div>
    </div>
    
    <div class="warning-section">
        <div class="warning-icon">
            <i class="fas fa-exclamation-triangle"></i>
        </div>
        <h5 class="warning-title">Are you absolutely sure?</h5>
        <p class="warning-text">This action cannot be undone. The student record will be permanently deleted.</p>
        <div class="warning-note">
            <i class="fas fa-info-circle me-2"></i>
            <strong>Warning:</strong> Deleting this student will remove all associated data from the database permanently.
        </div>
    </div>
    
    <div class="student-preview">
        <h6 class="preview-title">
            <i class="fas fa-user"></i>
            Student Information to be Deleted
        </h6>
        
        <div class="student-card">
            <div class="student-avatar-preview">
                @((!string.IsNullOrEmpty(Model.FirstName) && Model.FirstName.Length > 0) ? Model.FirstName.Substring(0, 1).ToUpper() : "N")
            </div>
            <div class="student-name-preview">@Model.FullName</div>
            <div class="student-details-preview">
                Roll: @Model.RollNumber | 
                @if (Model.Class != null)
                {
                    <text>@Model.Class.ClassName - @Model.Class.Section</text>
                }
                else
                {
                    <span class="text-danger">Class not assigned</span>
                }
                | @Model.Age years old
            </div>
            <div class="student-details-preview mt-2">
                <i class="fas fa-envelope me-1"></i>@Model.Email | 
                <i class="fas fa-phone me-1"></i>@Model.PhoneNumber
            </div>
            <div class="student-details-preview mt-2">
                <i class="fas fa-map-marker-alt me-1"></i>@Model.City, @Model.Country
            </div>
            <div class="student-id-preview">#@Model.Id.ToString("D4")</div>
        </div>
    </div>
    
    <div class="actions-section">
        <div>
            <a asp-action="Index" class="professional-btn btn-cancel">
                <i class="fas fa-times"></i>
                Cancel & Go Back
            </a>
        </div>
        
        <div>
            <form asp-action="Delete" method="post" class="d-inline">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="professional-btn btn-delete-confirm" 
                        onclick="return confirm('Are you absolutely sure you want to delete this student? This action cannot be undone!')">
                    <i class="fas fa-trash"></i>
                    Confirm Delete
                </button>
            </form>
        </div>
    </div>
</div>
