@model ReportDemo.Models.Student

@{
    ViewData["Title"] = "Edit Student";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<style>
    .edit-form-container {
        background: #fff;
        border-radius: 12px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.08);
        overflow: hidden;
    }
    
    .form-header {
        background: linear-gradient(135deg, #3498db 0%, #2980b9 100%);
        color: white;
        padding: 25px 30px;
        position: relative;
    }
    
    .form-header::before {
        content: '';
        position: absolute;
        top: -50%;
        right: -50%;
        width: 200%;
        height: 200%;
        background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 70%);
        animation: rotate 20s linear infinite;
    }
    
    @@keyframes rotate {
        from { transform: rotate(0deg); }
        to { transform: rotate(360deg); }
    }
    
    .form-header-content {
        position: relative;
        z-index: 2;
    }
    
    .form-header h4 {
        margin: 0;
        font-size: 1.5rem;
        font-weight: 600;
        display: flex;
        align-items: center;
        gap: 12px;
    }
    
    .form-header p {
        margin: 8px 0 0 0;
        opacity: 0.9;
        font-size: 0.95rem;
    }
    
    .student-info-badge {
        background: rgba(255,255,255,0.2);
        padding: 8px 15px;
        border-radius: 20px;
        font-size: 0.85rem;
        margin-top: 10px;
        display: inline-block;
    }
    
    .form-body {
        padding: 40px 30px;
    }
    
    .professional-input-group {
        margin-bottom: 25px;
    }
    
    .professional-label {
        font-weight: 600;
        color: #2c3e50;
        margin-bottom: 8px;
        font-size: 0.95rem;
        display: flex;
        align-items: center;
        gap: 8px;
    }
    
    .professional-input {
        border: 2px solid #e9ecef;
        border-radius: 8px;
        padding: 12px 16px;
        font-size: 1rem;
        transition: all 0.3s ease;
        background: #f8f9fa;
    }
    
    .professional-input:focus {
        border-color: #3498db;
        box-shadow: 0 0 0 3px rgba(52, 152, 219, 0.1);
        background: #fff;
        outline: none;
    }
    
    .form-actions {
        display: flex;
        justify-content: space-between;
        gap: 15px;
        padding-top: 20px;
        border-top: 1px solid #e9ecef;
    }
    
    .professional-btn {
        padding: 12px 25px;
        border: none;
        border-radius: 8px;
        font-weight: 500;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        transition: all 0.3s ease;
        font-size: 0.95rem;
        cursor: pointer;
    }
    
    .btn-update {
        background: linear-gradient(135deg, #3498db 0%, #2980b9 100%);
        color: white;
    }
    
    .btn-update:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(52, 152, 219, 0.4);
        color: white;
    }
    
    .btn-back {
        background: linear-gradient(135deg, #95a5a6 0%, #7f8c8d 100%);
        color: white;
    }
    
    .btn-back:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(149, 165, 166, 0.4);
        color: white;
    }
    
    .btn-danger {
        background: linear-gradient(135deg, #e74c3c 0%, #c0392b 100%);
        color: white;
    }
    
    .btn-danger:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(231, 76, 60, 0.4);
        color: white;
    }
    
    .validation-error {
        color: #e74c3c;
        font-size: 0.85rem;
        margin-top: 5px;
        display: block;
    }
    
    .input-icon {
        color: #7f8c8d;
    }
</style>

<div class="edit-form-container">
    <div class="form-header">
        <div class="form-header-content">
            <h4>
                <i class="fas fa-user-edit"></i>
                Edit Student Record
            </h4>
            <p>Update student information in the system</p>
            <div class="student-info-badge">
                <i class="fas fa-id-badge"></i>
                Student ID: #@Model.Id.ToString("D4")
            </div>
        </div>
    </div>
    
    <div class="form-body">
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id" />
            
            <div class="professional-input-group">
                <label asp-for="Name" class="professional-label">
                    <i class="fas fa-user input-icon"></i>
                    Full Name
                </label>
                <input asp-for="Name" class="form-control professional-input" 
                       placeholder="Enter student's full name" autocomplete="name" />
                <span asp-validation-for="Name" class="validation-error"></span>
            </div>

            <div class="professional-input-group">
                <label asp-for="Age" class="professional-label">
                    <i class="fas fa-calendar-alt input-icon"></i>
                    Age
                </label>
                <input asp-for="Age" class="form-control professional-input" 
                       placeholder="Enter student's age" type="number" min="1" max="150" />
                <span asp-validation-for="Age" class="validation-error"></span>
            </div>

            <div class="form-actions">
                <div>
                    <a asp-action="Index" class="professional-btn btn-back">
                        <i class="fas fa-arrow-left"></i>
                        Back to List
                    </a>
                </div>
                <div class="d-flex gap-3">
                    <a asp-action="Delete" asp-route-id="@Model.Id" class="professional-btn btn-danger">
                        <i class="fas fa-trash"></i>
                        Delete
                    </a>
                    <button type="submit" class="professional-btn btn-update">
                        <i class="fas fa-save"></i>
                        Update Student
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
