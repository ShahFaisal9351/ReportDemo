@model ReportDemo.ViewComponents.UserAvatarViewModel

<div class="user-profile">
    <a asp-controller="Profile" asp-action="Index" class="user-avatar" title="Go to My Profile" style="text-decoration: none; color: inherit;">
        @if (!string.IsNullOrEmpty(Model.ProfilePicturePath))
        {
            <img src="@Model.ProfilePicturePath" alt="Profile Picture" style="width: 40px; height: 40px; border-radius: 50%; object-fit: cover; border: 2px solid #fff;">
        }
        else
        {
            <span>@Model.InitialLetter</span>
        }
    </a>
    <div class="user-info">
        <a asp-controller="Profile" asp-action="Index" style="text-decoration: none; color: inherit;">
            <h6>@Model.DisplayName</h6>
            <small>Administrator</small>
        </a>
    </div>
    <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
        <button type="submit" class="logout-btn" title="Logout">
            <i class="fas fa-sign-out-alt"></i>
        </button>
    </form>
</div>