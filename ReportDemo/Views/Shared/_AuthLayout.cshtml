<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - EduManage Student Management System</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<style>
		:root {
			--primary-gradient: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
			--success-gradient: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
			--shadow-primary: 0 10px 30px rgba(102, 126, 234, 0.3);
		}

		.auth-bg {
			min-height: 100vh;
			background: linear-gradient(135deg, #667eea 0%, #764ba2 50%, #667eea 100%);
			position: relative;
			overflow: hidden;
		}

		.auth-bg::before {
			content: '';
			position: absolute;
			top: 0;
			left: 0;
			right: 0;
			bottom: 0;
			background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1000 1000"><defs><pattern id="grid" width="50" height="50" patternUnits="userSpaceOnUse"><path d="M 50 0 L 0 0 0 50" fill="none" stroke="rgba(255,255,255,0.1)" stroke-width="1"/></pattern></defs><rect width="100%" height="100%" fill="url(%23grid)" /></svg>');
			opacity: 0.3;
		}

		.auth-card {
			backdrop-filter: blur(20px);
			background: rgba(255, 255, 255, 0.95);
			border: 1px solid rgba(255, 255, 255, 0.2);
			border-radius: 20px;
			box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
			position: relative;
			z-index: 2;
			overflow: hidden;
		}

		.auth-card::before {
			content: '';
			position: absolute;
			top: 0;
			left: 0;
			right: 0;
			height: 6px;
			background: var(--primary-gradient);
		}

		.brand-section {
			text-align: center;
			margin-bottom: 40px;
			padding-top: 20px;
		}

		.brand-logo {
			width: 80px;
			height: 80px;
			border-radius: 50%;
			background: var(--primary-gradient);
			display: flex;
			align-items: center;
			justify-content: center;
			margin: 0 auto 20px;
			box-shadow: var(--shadow-primary);
			color: white;
			font-size: 2rem;
		}

		.brand-title {
			font-weight: 700;
			font-size: 1.8rem;
			color: #2c3e50;
			margin-bottom: 8px;
		}

		.brand-subtitle {
			color: #7f8c8d;
			font-size: 1rem;
			font-weight: 500;
		}

		.form-floating {
			margin-bottom: 20px;
		}

		.form-control.auth-input {
			background: #f8f9fa;
			border: 2px solid #e9ecef;
			color: #2c3e50;
			border-radius: 12px;
			padding: 15px 20px;
			font-size: 1rem;
			transition: all 0.3s ease;
			height: auto;
		}

		.form-control.auth-input:focus {
			border-color: #667eea;
			box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
			background: white;
			transform: translateY(-1px);
		}

		.form-control.auth-input::placeholder {
			color: #adb5bd;
		}

		.auth-btn {
			background: var(--primary-gradient);
			border: none;
			padding: 15px 30px;
			border-radius: 12px;
			font-weight: 600;
			font-size: 1rem;
			transition: all 0.3s ease;
			text-transform: uppercase;
			letter-spacing: 0.5px;
			position: relative;
			overflow: hidden;
		}

		.auth-btn:hover {
			transform: translateY(-2px);
			box-shadow: var(--shadow-primary);
		}

		.auth-btn:active {
			transform: translateY(0);
		}

		.auth-link {
			color: #667eea;
			font-weight: 500;
			transition: all 0.3s ease;
			text-decoration: none;
		}

		.auth-link:hover {
			color: #764ba2;
			text-decoration: underline;
		}

		.form-check-input:checked {
			background-color: #667eea;
			border-color: #667eea;
		}

		.validation-summary {
			background: rgba(220, 53, 69, 0.1);
			border: 1px solid rgba(220, 53, 69, 0.2);
			color: #dc3545;
			border-radius: 8px;
			padding: 15px;
			margin-bottom: 20px;
		}

		.text-danger {
			color: #dc3545 !important;
			font-size: 0.85rem;
			margin-top: 5px;
			display: block;
		}

		@@media (max-width: 768px) {
			.auth-card {
				margin: 20px;
				padding: 30px 20px;
			}
			
			.brand-logo {
				width: 60px;
				height: 60px;
				font-size: 1.5rem;
			}
			
			.brand-title {
				font-size: 1.5rem;
			}
		}
	</style>
</head>
<body class="auth-bg d-flex align-items-center">
	<div class="container py-5">
		<div class="row justify-content-center">
			<div class="col-12 col-sm-10 col-md-8 col-lg-6 col-xl-5">
				<div class="auth-card p-4 p-md-5">
					<div class="brand-section">
						<div class="brand-logo">
							<i class="fas fa-graduation-cap"></i>
						</div>
						<h2 class="brand-title">EduManage</h2>
						<p class="brand-subtitle">Student Management System</p>
						<hr class="my-4">
						<h5 class="text-center text-muted mb-4">@ViewData["Title"]</h5>
					</div>
					@RenderBody()
				</div>
			</div>
		</div>
	</div>

	<!-- Footer -->
	<footer class="border-top text-muted">
		<style>
			footer { background: #f8f9fa; border-top: 1px solid #e9ecef; }
			.app-footer { padding: 14px 0; }
			.app-footer .credit { font-weight: 600; color: #495057; }
		</style>
		<div class="container app-footer">
			<div class="d-flex flex-column flex-md-row justify-content-between align-items-center small">
				<div>&copy; 2025 EduManage. All rights reserved.</div>
				<div>Developed by <span class="credit">Shah Faisal</span></div>
			</div>
		</div>
	</footer>

	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>



