{
  "ConnectionStrings": {
    // ✅ PostgreSQL connection string
    "DefaultConnection": "Host=localhost;Port=5432;Database=ReportDemoDB;Username=postgres;Password=1234;Pooling=true;Maximum Pool Size=20;Connection Lifetime=0;Connection Idle Lifetime=300;Connection Pruning Interval=10;"
  },

  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore.Database.Command": "Information" // ✅ shows SQL queries in logs
    }
  },

  "AllowedHosts": "*",

  // ✅ Identity configuration
  "Identity": {
    "Password": {
      "RequireDigit": true,
      "RequireLowercase": true,
      "RequireUppercase": true,
      "RequiredLength": 6,
      "RequireNonAlphanumeric": false
    },
    "Lockout": {
      "DefaultLockoutTimeSpan": "00:05:00",
      "MaxFailedAccessAttempts": 5,
      "AllowedForNewUsers": true
    },
    "User": {
      "RequireUniqueEmail": true
    }
  }
}
